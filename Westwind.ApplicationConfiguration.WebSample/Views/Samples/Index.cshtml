  <body>   
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="../index.htm">@ViewBag.Title</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><a href="../index.htm">Home</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
        <div class="alert alert-error" data-dismiss="alert">
            <a class="close" href="#">&times;</a> 
            <i class="icon-exclamation-sign"></i> @Model.ErrorMessage              
        </div>
        }
        @if (!string.IsNullOrEmpty(Model.InfoMessage))
        {
        <div class="alert alert-info" data-dismiss="alert">
            <a class="close" href="#">&times;</a> 
            <i class="icon-info-sign"></i> @Html.Raw(Model.InfoMessage)
        </div>
        }
        
        <form action="@Url.Action("Save")" method="post">
        @Html.DropDownListFor(mod => mod.ConfigTypeSelection,
                new SelectListItem[] {
                    new SelectListItem() {
                        Value = "Default Web.Config",
                        Text = "Default Web.Config"
                    },
                    new SelectListItem() {
                        Value = "Different Web.Config Section",
                        Text = "Different Web.Config Section"
                    },
                    new SelectListItem() {
                        Value = "Different .Config File",
                        Text = "Different .Config File"
                    },
                    new SelectListItem() {
                        Value = "Simple Xml File",
                        Text = "Simple Xml File"
                    },
                    new SelectListItem() {
                        Value = "String",
                        Text = "String"
                    },
                    new SelectListItem() {
                        Value = "Database",
                        Text = "Database"
                    },
                }, new { onchange = "$('form').submit();" })
            
	
	            <div class="containercontent">
        
		                @Html.Raw(Model.ShowPropertyGrid())
		                <div class="">

		                </div>    
                    
                    <p>
                            <input type="submit" id="btnSubmit" name="btnSubmit" class="btn btn-primary btn-large" value="Save Settings" accesskey="S"/>
                        </p>
        
	            </div>

    </form>
            
    </div>

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="../js/jquery.min.js"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/bootstrap-dropdown.js"></script>
    <script src="../js/bootstrap-alert.js"></script>


    @*<script src="js/bootstrap-transition.js"></script>

    <script src="js/bootstrap-modal.js"></script>
    
    <script src="js/bootstrap-scrollspy.js"></script>
    <script src="js/bootstrap-tab.js"></script>
    <script src="js/bootstrap-tooltip.js"></script>
    <script src="js/bootstrap-popover.js"></script>
    <script src="js/bootstrap-button.js"></script>
    <script src="js/bootstrap-collapse.js"></script>
    <script src="js/bootstrap-carousel.js"></script>
    <script src="js/bootstrap-typeahead.js"></script>
