@model ApplicationConfigurationMvc.Controllers.SamplesViewModel
@{
    ViewBag.Title = "Application Configuration Demo";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="../css/bootstrap.css" rel="stylesheet">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .btn-primary,.btn-success {
        background-image: none;
        filter: none;
       }
    </style>
